@font-face
  font-family HFNSS
  src url('HFNSS.ttf')

standardSize    = 2em
biggerSize      = 4em
wayBig          = 8em
cellWidth       = 50px
cellHeight      = 19px

pointColor      = #b0a69a

importantText   = #b39f4b
importanterText = #e3d34b

ignorable       = #807872
veryIgnorable   = #54574d

background      = #030907

critical        = #f21d23
good            = #366317
prettyBlue      = #175cfe

::-webkit-input-placeholder {
   color: veryIgnorable;
}

body
  background background
  padding    0
  margin     0
  
.game
  width  100%
  height 100%

.view-port
  margin            auto
  height            600px
  width             600px
  position          relative
  background-color  #000000
  border-radius     50%
  top               50%
  transform         translateY(-50%)
  overflow          hidden 
  border            2px solid pointColor
  
  